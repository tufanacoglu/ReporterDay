@{
    Layout = null;
}
<!doctype html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>YAZAR PANELİ</title>
    <link rel="shortcut icon" type="image/png" href="~/Spike-Bootstrap-1.0.0/src/assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/Spike-Bootstrap-1.0.0/src/assets/css/styles.min.css" />
</head>

<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">

        <div class="app-topstrip bg-dark py-6 px-3 w-100 d-lg-flex align-items-center justify-content-between">
            <a href="#" target="_blank">
                <img src="~/Spike-Bootstrap-1.0.0/src/assets/images/logos/logo-wrappixel.svg" width="150">
            </a>
        </div>


        <aside class="left-sidebar">
            <div>
                <div class="brand-logo">
                    <a href="/Author/Index">
                        <img src="~/Spike-Bootstrap-1.0.0/src/assets/images/logos/logo.svg" alt="" />
                    </a>
                </div>
                <nav class="sidebar-nav scroll-sidebar">
                    <ul id="sidebarnav">
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Author" asp-action="Index">
                                <iconify-icon icon="solar:chart-line-duotone"></iconify-icon>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Author" asp-action="Profile">
                                <iconify-icon icon="solar:shield-user-line-duotone"></iconify-icon>
                                <span>Profilim</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Author" asp-action="MyArticleList">
                                <iconify-icon icon="solar:sticker-smile-circle-2-line-duotone"></iconify-icon>
                                <span>Makalelerim</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Author" asp-action="ChangePassword">
                                <iconify-icon icon="solar:password-outline"></iconify-icon>
                                <span>Şifre İşlemleri</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="body-wrapper">
            <div class="body-wrapper-inner">
                <div class="container-fluid">
                    <header class="app-header">
                        <nav class="navbar navbar-expand-lg navbar-light">
                            <ul class="navbar-nav">
                                <li class="nav-item d-block d-xl-none">
                                    <a class="nav-link sidebartoggler" href="javascript:void(0)">
                                        <i class="ti ti-menu-2"></i>
                                    </a>
                                </li>
                            </ul>
                            <div class="navbar-collapse justify-content-end px-0">
                                <ul class="navbar-nav flex-row ms-auto align-items-center">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link" data-bs-toggle="dropdown">
                                            <img src="~/Spike-Bootstrap-1.0.0/src/assets/images/profile/user1.jpg" width="35" height="35" class="rounded-circle">
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </header>

                    @RenderBody() <!-- İşte kritik nokta burası patron! -->

                    <div class="py-6 px-6 text-center">
                        <p class="mb-0 fs-4">
                            Design and Developed by <a href="https://tufanacoglu.com/">Tufan Açoğlu</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="~/Spike-Bootstrap-1.0.0/src/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/js/sidebarmenu.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/js/app.min.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/js/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>

</body>

</html>
